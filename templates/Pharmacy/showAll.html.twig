{% extends 'base.html.twig' %}
{% block customjavascripts %}
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
{% block customcss %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/plug-ins/1.11.5/integration/font-awesome/dataTables.fontAwesome.css" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="container-fluid" style="padding: 50px;">
        {% include('utils/spinner.html.twig') %}
        {% include('Pharmacy/ExportWidget.html.twig') %}
        <table class="table table-striped" id="pharmacyTable" style="width: 100%; display: none;">
            <thead>
            <tr>
                <th data-fieldname="id">ID</th>
                <th data-fieldname="name">Nazwa</th>
                <th data-fieldname="postal_code">Kod pocztowy</th>
                <th data-fieldname="street">Ulica</th>
                <th data-fieldname="city">Miejscowść</th>
                <th data-fieldname="longitude">GPS Długość</th>
                <th data-fieldname="latitude">GPS Szerokość</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
{% endblock %}